@model List<(string name, string price, string image, string link, string shopImage)>
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Karşılaştırma</title>
    <style>
        /* Color Palette */
        :root {
            --primary-color: #007bff;
            --secondary-color: #f7f7f7;
            --accent-color: #4CAF50;
            --text-color: #333;
            --background-color: #fff;
            --shadow-color: rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: var(--secondary-color);
            margin: 0;
            padding: 20px;
            color: var(--text-color);
        }

        h3 {
            text-align: center;
            color: var(--primary-color);
            margin-bottom: 20px;
        }

        /* New Search Button */
        .search-button {
            display: block;
            width: 200px;
            margin: 0 auto 20px;
            padding: 10px 20px;
            background-color: var(--primary-color);
            color: #fff;
            text-align: center;
            text-decoration: none;
            font-weight: bold;
            border-radius: 8px;
            box-shadow: 0 4px 8px var(--shadow-color);
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .search-button:hover {
            background-color: var(--accent-color);
            transform: translateY(-3px);
        }

        .product-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background: var(--background-color);
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px var(--shadow-color);
            display: flex;
            flex-direction: column;
            padding: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px var(--shadow-color);
        }

        .product-image {
            width: 150px;
            height: 150px;
            border-radius: 5px;
            margin-bottom: 20px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .product-title {
            font-size: 18px;
            font-weight: bold;
            margin: 0 0 10px;
            color: var(--text-color);
        }

        .product-prices {
            margin-top: auto;
        }

        .price-box {
            background: var(--secondary-color);
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
        }

        .price-badge {
            background-color: var(--accent-color);
            color: white;
            font-size: 12px;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
            margin-bottom: 5px;
        }

        .shop-image img {
            max-width: 50px;
            max-height: 50px;
        }

        .more-offers {
            margin-top: 15px;
        }

        .more-offers a {
            color: var(--primary-color);
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .more-offers a:hover {
            color: var(--accent-color);
        }

        @@media (max-width: 600px) {
            .product-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>
    <!-- New Search Button -->
    <a href="/PriceComparison/Search" class="search-button">Search A Product</a>

    <h3>Your Search Results</h3>
    <div class="product-container">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <!-- Product Image -->
                <div class="product-image">
                    <img src="@product.image" alt="Ürün Resmi">
                </div>

                <!-- Product Details -->
                <div class="product-details">
                    <h2 class="product-title">@product.name</h2>
                    <div class="product-prices">
                        <div class="price-box">
                            <div class="price-badge">En Ucuz</div>
                            <strong>@product.price</strong>
                            <div class="shop-image">
                                <img src="@product.shopImage" alt="Mağaza Logosu">
                            </div>
                        </div>
                    </div>
                    <div class="more-offers">
                        <a href="/PriceComparison/ProductDetails?productLink=@System.Net.WebUtility.UrlEncode(product.link)" target="_blank">
                            Diğer Fiyatları İncele
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</body>

</html>
