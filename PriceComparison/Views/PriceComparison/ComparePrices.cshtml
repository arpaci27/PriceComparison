@model List<(string name, string price, string image, string link, string shopImage)>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Karşılaştırma</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f7f7f7;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        .product-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            display: flex;
            flex-direction: row;
            padding: 20px;
            align-items: flex-start;
        }

        .product-image {
            width: 150px;
            height: 150px;
            border-radius: 5px;
            background-color: #eee;
            margin-right: 20px;
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .product-image img {
                max-width: 100%;
                max-height: 100%;
                border-radius: 5px;
            }

        .product-details {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .product-title {
            font-family: 'Roboto', sans-serif;
            font-size: 17px;
            font-weight: bold;
            color: #333;
            margin: 0;
            margin-bottom: 10px;
        }

        .product-prices {
            display: flex;
            flex-direction: row;
            align-items: center;
            margin-top: auto;
        }

        .price-box {
            background: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            font-size: 14px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            min-width: 100px;
            margin-left: auto;
        }

            .price-box strong {
                color: #2a2a2a;
                font-size: 16px;
                margin-bottom: 5px;
            }

        .shop-image {
            margin-top: 10px;
        }

            .shop-image img {
                max-width: 50px;
                max-height: 50px;
            }

        @@media (max-width: 600px) {
            .product-card {
                flex-direction: column;
                align-items: center;
            }

            .product-image {
                margin-right: 0;
                margin-bottom: 15px;
            }

            .price-box {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <h1>Ürün Karşılaştırma Sonuçları</h1>
    <div class="product-container">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="product-image">
                    <img src="@product.image" alt="Ürün Resmi">
                </div>
                <div class="product-details">
                    <h2 class="product-title">@product.name</h2>
                    <div class="product-prices">
                        <div class="price-box">
                            <div class="price-badge">
                                <span>En Ucuz</span>
                            </div>
                            <strong>@product.price</strong>
                            <div class="shop-image">
                                <img src="@product.shopImage" alt="Mağaza Logosu">
                            </div>
                        </div>
                    </div>
                    <div class="more-offers">
                        <a href="/PriceComparison/ProductDetails?productLink=@System.Net.WebUtility.UrlEncode(product.link)" target="_blank">Diğer Fiyatları İncele</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <style>
        .price-badge {
            background-color: #4CAF50; /* Yeşil renk */
            color: white;
            font-size: 12px;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            margin-bottom: 5px;
        }
    </style>

</body>
</html>
