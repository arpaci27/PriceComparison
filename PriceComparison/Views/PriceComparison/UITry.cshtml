    <title>Xiaomi Redmi Note 13 Pro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .product-container {
            max-width: 800px;
            margin: auto;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
        }

        .product-image {
            text-align: center;
        }

            .product-image img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
            }

        .product-details {
            margin-top: 20px;
        }

        .product-title {
            font-size: 24px;
            font-weight: bold;
        }

        .rating {
            margin: 10px 0;
            color: #f39c12;
        }

        .options {
            margin: 10px 0;
        }

        .price {
            font-size: 20px;
            font-weight: bold;
            margin: 10px 0;
        }

        .store-link {
            text-align: center;
            margin-top: 20px;
        }

            .store-link a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007bff;
                color: white;
                text-decoration: none;
                border-radius: 5px;
            }

                .store-link a:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
