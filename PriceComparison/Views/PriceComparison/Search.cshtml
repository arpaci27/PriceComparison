<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Price Comparison</title>
    <style>
        /* Genel stil */
        body {
            background-color: #f8f9fa;
            margin: 0;
            font-family: 'Roboto', sans-serif;
            color: #212529;
        }

        /* Navbar stili */
        h2 {
            text-align: center;
            margin-top: 1rem;
            color: #343a40;
        }

        /* Form stili */
        .form {
            max-width: 500px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin: 2rem auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
            color: #495057;
        }

        .form-select, .form-input {
            width: 100%;
            padding: 0.75rem;
            font-size: 1rem;
            border: 1px solid #ced4da;
            border-radius: 5px;
            background-color: #f8f9fa;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-select:focus, .form-input:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            outline: none;
        }

        .form-button {
            width: 100%;
            padding: 0.75rem;
            font-size: 1rem;
            color: #fff;
            background-color: #28a745;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .form-button:hover {
            background-color: #218838;
        }

        /* Spinner */
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #007bff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        #loading {
            display: none;
            text-align: center;
            margin-bottom: 20px;
        }

        #loading p {
            margin-top: 10px;
            font-size: 1rem;
            color: #6c757d;
        }

        /* Responsive tasarım */
        @@media (max-width: 600px) {
            .form {
                padding: 1.5rem;
            }

            h2 {
                font-size: 1.5rem;
            }

            .form-button {
                font-size: 0.9rem;
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <br />
    <h2>Product Price Comparison</h2>

    <!-- Yükleniyor Spinner -->
    <div id="loading">
        <div class="spinner"></div>
        <p>Searching...</p>
    </div>

    <!-- Ürün Arama Formu -->
    <form method="get" action="/PriceComparison/ComparePrices" class="form" onsubmit="showLoading()">
        <div class="form-group">
            <label for="category" class="form-label">Choose a Category:</label>
            <select id="category" name="category" class="form-select" required>
                <option value="">Choose a Category</option>
                <option value="phone">Phone</option>
                <option value="computer">Computer</option>
                <option value="tablet">Tablet</option>
                <option value="smartwatch">Smart Watch</option>
            </select>
        </div>
        <div id="searchField" class="form-group" style="display: none;">
            <label for="searchTerm" class="form-label">Enter Product Name:</label>
            <input type="text" id="searchTerm" name="searchTerm" class="form-input" required placeholder="Enter a Product Name" />
        </div>
        <div class="form-group">
            <button type="submit" id="searchButton" class="form-button" style="display: none;">Search</button>
        </div>
    </form>

    <script>
        document.getElementById('category').addEventListener('change', function () {
            const searchField = document.getElementById('searchField');
            const searchButton = document.getElementById('searchButton');

            if (this.value) {
                searchField.style.display = 'block';
                searchButton.style.display = 'block';
            } else {
                searchField.style.display = 'none';
                searchButton.style.display = 'none';
            }
        });

        function showLoading() {
            document.getElementById('loading').style.display = 'block';
        }
    </script>
</body>
</html>
