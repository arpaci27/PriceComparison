@model List<(string name, string price, string shopImage, string productImage)>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Detayları</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f7f7f7;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        .product-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            display: flex;
            flex-direction: row;
            padding: 20px;
            align-items: flex-start;
        }

        .product-image {
            width: 150px;
            height: 150px;
            border-radius: 5px;
            background-color: #eee;
            margin-right: 20px;
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-image img {
            max-width: 100%;
            max-height: 100%;
            border-radius: 5px;
        }

        .product-details {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .product-title {
            font-size: 17px;
            font-weight: bold;
            color: #333;
            margin: 0;
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 16px;
            color: #2a2a2a;
        }

        .product-image1 {
            width: 250px; /* Genişliği büyüttük */
            height: 250px; /* Yüksekliği büyüttük */
            border-radius: 5px;
            background-color: #eee;
            margin-right: 20px;
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .product-image1 img {
                max-width: 100%;
                max-height: 100%;
                border-radius: 5px;
            }
    </style>
</head>
<body>
    <h1>Ürün Detayları</h1>
    <div class="product-container">
        @if (Model != null && Model.Any())
        {
            var product = Model.First();
            var cheapestProduct = Model.OrderBy(p => p.price).First(); // En ucuz ürün
            <div class="product-card">
                <div class="product-image1">
                    <img src="@product.productImage" alt="Ürün Resmi">
                </div>
                <div class="product-details">
                    <h2 class="product-title">@product.name</h2>
                    <p class="product-price">@cheapestProduct.price</p> <!-- En ucuz fiyat -->
                </div>
            </div>
        }
    </div>

    <div class="product-container">
        @{
            var sortedProducts = Model.OrderBy(p => p.price).ToList(); // Sıralama işlemi
            int index = 0; // Sayaç
        }

        @foreach (var product in sortedProducts)
        {
            <div class="product-card">
                <div class="product-image">
                    <img src="@product.shopImage" alt="Mağaza Logosu">
                </div>
                <div class="product-details">
                    <h2 class="product-title">@product.name</h2>
                    <div class="price-container">
                        @if (index == 0) 
                        {
                            <div class="price-badge">
                                <span>En Ucuz</span>
                            </div>
                        }
                        <p class="product-price">@product.price</p>
                    </div>
                </div>
            </div>
            index++; // Sayaç artırılır
        }
    </div>
</body>
</html>
